<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:layout_gravity="center_horizontal"
            >
            <com.synnapps.carouselview.CarouselView
                android:id="@+id/carouse_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:textColor="@color/accent_color"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:text="THE COFFEE HOUSE"
                    android:id="@+id/store_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_item_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="43 HOA HỒNG"
                    android:layout_marginLeft="20dp"
                    android:textSize="20sp"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_item_open_time"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey"
                    android:text="Giờ mở cửa: 7:00 - 22:00"
                    android:layout_marginLeft="20dp"
                    android:textSize="12sp"/>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/white_gray"/>

        <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:paddingRight="16dp"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_baseline_alt_route_24"
                android:background="@drawable/icon_round_backgound"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                android:textSize="17sp"
                android:text="43 Hoa Hồng, Quận Phú Nhuận, Hồ Chí Minh"/>





        </LinearLayout>

    </androidx.cardview.widget.CardView>
        <View
            android:layout_width="360dp"
            android:layout_gravity="right"
            android:layout_height="2dp"
            android:background="@color/white_gray"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_baseline_star_rate_24"
                    android:background="@drawable/icon_round_backgound"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    android:textSize="17sp"
                    android:text="Thêm vào danh sách yêu thích"/>





            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="360dp"
            android:layout_height="2dp"
            android:background="@color/white_gray"
            android:layout_gravity="right"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_baseline_phone_24"
                    android:background="@drawable/icon_round_backgound"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    android:textSize="17sp"
                    android:text="Liên hệ"/>





            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="360dp"
            android:layout_height="2dp"
            android:background="@color/white_gray"
            android:layout_gravity="right"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_baseline_share_24"
                    android:background="@drawable/icon_round_backgound"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp"
                    android:textSize="17sp"
                    android:text="Chia sẻ với bạn bè"/>





            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="370dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="8dp"
            android:layout_height="230dp"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/ggmap"
                android:layout_gravity="fill"
                android:layout_height="match_parent"
                />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    android:layout_width="370dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    android:backgroundTint="@color/accent_color"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:text="Đặt món"
                            android:layout_marginTop="5dp"
                            android:textSize="18sp"
                            android:layout_gravity="center_horizontal"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="250dp"
                            android:textAlignment="center"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="Tự đến lấy tại cửa hàng này"
                            android:layout_gravity="center_horizontal"/>



                    </LinearLayout>



                </androidx.cardview.widget.CardView>




            </RelativeLayout>






        </androidx.cardview.widget.CardView>








    </LinearLayout>




</androidx.core.widget.NestedScrollView>