        <!--            >-->

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txt_input_name"
            android:layout_width="370dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_with_greyoutline"
            android:hint="@string/enteryourname"
            android:paddingStart="15dp"
            android:paddingRight="10dp"
            android:text="@{userInfoViewModel.name}"
            android:textSize="16dp" />
        <!--        </com.google.android.material.textfield.TextInputLayout>-->

        <!--        <com.google.android.material.textfield.TextInputLayout-->
        <!--            android:id="@+id/text_input_lastname"-->
        <!--            style="@style/TextInputLayout.OutlinedBox.Custom"-->
        <!--            android:layout_width="370dp"-->
