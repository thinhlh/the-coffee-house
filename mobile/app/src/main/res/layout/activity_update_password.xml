<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_gray"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white_gray"
            android:orientation="vertical">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/app_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    app:navigationIcon="@drawable/ic_baseline_arrow_back_ios_24"
                    app:title="@string/update_password" />

            </com.google.android.material.appbar.AppBarLayout>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/general_dimen"
                android:padding="@dimen/general_padding"
                android:text="@string/updateaccount_password"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                android:textStyle="bold" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_old_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/general_padding"
                android:elevation="10dp"
                android:textColorHint="@color/grey"
                app:boxBackgroundColor="@color/white"
                app:boxCornerRadiusTopStart="10dp"
                app:boxStrokeColor="@color/accent_color"
                app:endIconMode="password_toggle"
                app:hintTextColor="@color/accent_color">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableStart="@drawable/ic_baseline_password_24"
                    android:drawablePadding="@dimen/general_dimen"
                    android:drawableTint="@color/accent_color"
                    android:hint="@string/old_pwd_hint"
                    android:inputType="textPassword"
                    android:paddingVertical="20dp"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:textColorHint="@color/deep_sky_blue" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_new_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/general_padding"
                android:elevation="10dp"
                android:textColorHint="@color/grey"
                app:boxBackgroundColor="@color/white"
                app:boxCornerRadiusTopStart="10dp"
                app:boxStrokeColor="@color/accent_color"
                app:endIconMode="password_toggle"
                app:hintTextColor="@color/accent_color">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableStart="@drawable/ic_baseline_password_24"
                    android:drawablePadding="@dimen/general_dimen"
                    android:drawableTint="@color/accent_color"
                    android:hint="@string/new_pwd_hint"
                    android:inputType="textPassword"
                    android:paddingVertical="20dp"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:textColorHint="@color/deep_sky_blue" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_confirm_new_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/general_padding"
                android:elevation="10dp"
                android:textColorHint="@color/grey"
                app:boxBackgroundColor="@color/white"
                app:boxCornerRadiusTopStart="10dp"
                app:boxStrokeColor="@color/accent_color"
                app:endIconMode="password_toggle"
                app:hintTextColor="@color/accent_color">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableStart="@drawable/ic_baseline_password_24"
                    android:drawablePadding="@dimen/general_dimen"
                    android:drawableTint="@color/accent_color"
                    android:hint="@string/confirm_new_pwd_hint"
                    android:inputType="textPassword"
                    android:paddingVertical="20dp"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:textColorHint="@color/deep_sky_blue" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_send_request_update_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/accent_color"
                android:text="@string/submit_update_pwd"
                app:cardCornerRadius="10dp" />

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>



