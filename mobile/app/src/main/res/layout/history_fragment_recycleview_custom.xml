<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_atstore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tại cửa hàng" />

            <androidx.appcompat.widget.AppCompatCheckedTextView
                android:id="@+id/text_itemname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bạc Xỉu"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_timeitem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07:10 - 06/05/2021" />


        </LinearLayout>


        <androidx.appcompat.widget.AppCompatCheckedTextView
            android:id="@+id/text_itemprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="35dp"
            android:text="35.000đ"
            android:textColor="@color/black"
            android:textSize="15dp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>