<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_gray"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/close_forget_password"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:src="@drawable/ic_baseline_arrow_back_ios_24" />

    <TextView
        android:id="@+id/txt_recovery_email"
        android:layout_width="360dp"
        android:layout_height="30dp"
        android:layout_above="@id/input_email_reset_pwd"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/recovery_email"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_email_reset_pwd"
        android:layout_width="360dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_button_with_white_background"
        android:hint="@string/email_hint"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text=""
        android:textSize="15sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_send_request_reset_pwd"
        android:layout_width="360dp"
        android:layout_height="30dp"
        android:layout_below="@+id/input_email_reset_pwd"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/accent_color"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/send"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>