<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:background="@color/browser_actions_bg_grey"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/bottom_sheet_dialog_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="@string/menu"
            android:textColor="@color/black"
            android:textSize="25sp"

            />
        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_gray"
            android:layout_below="@id/bottom_sheet_dialog_name"/>

        <ImageButton
            android:id="@+id/close_oder_bottomesheetdialog"
            android:layout_width="wrap_content"
            android:background="@drawable/ic_baseline_close_24"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
             />



            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/rl_all_product"
                android:layout_below="@id/view1"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/round_button"
                android:backgroundTint="@color/black"
                android:gravity="center"
                android:text="@string/all_product"
                android:textColor="@color/white"
                android:textSize="11dp"
                />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl_all_product"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:background="@color/browser_actions_bg_grey"
                android:id="@+id/categories_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 />

        </LinearLayout>

    </RelativeLayout>

</layout>