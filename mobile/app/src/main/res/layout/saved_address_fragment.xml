<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/bottom_sheet_dialog_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:text="@string/savedaddress"
                    android:textColor="@color/black"
                    android:textSize="20sp"

                    />

                <ImageView
                    android:id="@+id/close_saved_address"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_baseline_arrow_back_ios_24" />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/addhomeadress_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_baseline_home_24" />

                <TextView
                    android:id="@+id/text_addnewhomeadd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/addhomeadress_icon"
                    android:text="@string/addhomeaddress"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
                // nhớ set visibility cho cái đống text ở dười chỉ hiện ra sau khi add_new address
                <TextView
                    android:id="@+id/text_homeadd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_addnewhomeadd"
                    android:text="Chợ Bến Thành, Phường Nguyễn Thái Bình"
                    android:layout_alignStart="@+id/text_addnewhomeadd"
                    android:textColor="@color/grey"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_namehomeuser"
                    android:text="Minh Nhật Huỳnh"
                    android:layout_marginBottom="10dp"
                    android:layout_alignStart="@id/text_homeadd"
                    android:layout_below="@id/text_homeadd"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_phonenumberhomeuser"
                    android:text="0916854821"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@id/text_namehomeuser"
                    android:layout_below="@id/text_homeadd"/>

                <ImageView
                    android:id="@+id/fix_homeaddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_baseline_brush_24"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/addcompanyadress_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_baseline_work_24" />

                <TextView
                    android:id="@+id/text_addnewcompanyadd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/addcompanyadress_icon"
                    android:text="@string/addcompanyaddress"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
                // nhớ set visibility cho cái đống text ở dười chỉ hiện ra sau khi add_new address
                <TextView
                    android:id="@+id/text_companyadd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_addnewcompanyadd"
                    android:text="Chợ Bến Thành, Phường Nguyễn Thái Bình"
                    android:layout_alignStart="@+id/text_addnewcompanyadd"
                    android:textColor="@color/grey"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_namecompanyuser"
                    android:text="Minh Nhật Huỳnh"
                    android:layout_marginBottom="10dp"
                    android:layout_alignStart="@id/text_companyadd"
                    android:layout_below="@id/text_companyadd"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_phonenumbercompanyuser"
                    android:text="0916854821"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@id/text_namecompanyuser"
                    android:layout_below="@id/text_companyadd"/>

                <ImageView
                    android:id="@+id/fix_companyaddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_baseline_brush_24"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"/>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/addnewadress_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_baseline_add_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/addnewadress_icon"
                    android:text="@string/addnewaddress"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>