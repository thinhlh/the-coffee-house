<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">


    <style name="TextInputLayout.OutlinedBox.Custom" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/white_gray</item>
        <item name="boxCornerRadiusBottomStart">@dimen/input_border_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/input_border_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/input_border_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/input_border_radius</item>
    </style>

    <style name="MaterialCalendarTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <!-- just override the colors used in the default style -->
        <item name="colorOnPrimary">@color/white_gray</item>
        <item name="colorPrimary">@color/accent_color</item>
    </style>

    <style name="AdminEditToolbar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="IconButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">52dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconPadding">0dp</item>
    </style>

    <style name="AdminCommonInfoField" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/general_padding</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="android:drawablePadding">@dimen/general_dimen</item>
    </style>

    <style name="splashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/tcfhlogo</item>
    </style>

    <style name="AdminOthersCard" parent="Widget.MaterialComponents.CardView">
        <item name="android:clickable">true</item>
        <item name="elevation">@dimen/cardview_default_elevation</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_margin">@dimen/general_dimen</item>
    </style>

    <style name="CustomProgressIndicator" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="indicatorColor">@color/black</item>
        <item name="android:indeterminate">true</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>